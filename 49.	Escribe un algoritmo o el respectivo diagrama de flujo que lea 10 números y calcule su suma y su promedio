#Ejercicio 49
sumatoria=0
promedio=0
count=1
while True:
    numero=int(input("Ingresa un numero: "))
    sumatoria=sumatoria+numero
    count=count+1
    if count==11:
        break
promedio=sumatoria/10
print("La suma de los numeros ingresados es: ",sumatoria)
print("El promedio de los numeros ingresados es: ",promedio)
